<mvc:View controllerName="zov.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
            <!-- <Text text="{i18n>customerName}:" class="sapUiTinyMargin"/> --> 
            <Text core:require="{ formatMessage: 'sap/base/strings/formatMessage' }"
                text="{ 
                    parts:[
                        {path: 'i18n>welcomeMsg'},
                        {path: '/usuario/nome'}
                    ],
                    formatter: 'formatMessage'
                 }"

                 class="sapUiTinyMargin"
            />
            
            <Button type="Emphasized" text="{i18n>displayMsg}" press="onPress" />
    </Page>
</mvc:View>