<mvc:View controllerName="zov.controller.ReadOvView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form" 
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page id="page2" title="{i18n>title}" showNavButton="true" navButtonPress="onNavBack">
        <mvc:XMLView viewName="zov.view.NavBarView"/>

        <VBox class="sapUiSmallMargin">
            <f:Form id="FormChange480_12121" editable="true">
                <f:title>
                    <core:Title text="{i18n>searchSalesOrder}"></core:Title>
                </f:title>

                <f:layout>
                    <f:ResponsiveGridLayout 
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="false" />
                </f:layout>

                <f:formContainers>
                    <f:FormContainer>
                        <f:FormElement label="{i18n>orderId}">
                            <f:fields>
                                <Input value="" id="ordemIdRead" type="Number" required="true"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="">
                            <f:fields>
                                <Button icon="sap-icon://search" type="Emphasized" text="{i18n>search}" press="onSearch" />
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>

        <VBox class="sapUiSmallMargin">
            <f:Form id="FormChange480_12121-2" editable="true">
                <f:title>
                    <core:Title text= "{i18n>salesOrderInfo}"></core:Title>
                </f:title>

                <f:layout>
                    <f:ResponsiveGridLayout 
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="4"
                        adjustLabelSpan="false"
                        emptySpanXL="3"
                        emptySpanL="3"
                        emptySpanM="3"
                        emptySpanS="0"
                        columnsXL="2"
                        columnsL="2"
                        columnsM="2"
                        singleContainerFullSize="false" />
                </f:layout>

                <f:formContainers>
                    <f:FormContainer>
                        <f:FormElement label="{i18n>creationDate}">
                            <f:fields>
                                <Input value="" id="dataCriacaoRead" editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>createdBy}">
                            <f:fields>
                                <Input value="" id="criadoPorRead" editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>clientId}">
                            <f:fields>
                                <Input value="" id="clienteIdRead" editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalItems}">
                            <f:fields>
                                <Input value="" id="totalItensRead" editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalFreight}">
                            <f:fields>
                                <Input value="" id="totalFreteRead" editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalOrder}">
                            <f:fields>
                                <Input value="" id="totalOrdemRead" editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>orderStatus}">
                            <f:fields>
                                <Input value="" id="statusOrdemRead" editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>
                </f:formContainers>

                <f:FormContainer>
                    <f:FormElement label="">
                        <f:fields>
                            <Button icon="sap-icon://clear-all" type="Emphasized" text="{i18n>clean}" press="onClean" />
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>
            </f:Form>
        </VBox>

        <t:Table 
            id="tableReadItems"
            rows="{table>/}"
            selectionMode="MultiToggle"
            threshold="10"
            class="sapUiTinyMargin"
        >
            <t:extension>
                <OverflowToolbar style="Standard">
                    <Title id="titleReadItems" text="{i18n>items}"/> 
                </OverflowToolbar>
            </t:extension>

            <t:Column>
                <Label text="{i18n>orderId}"/>
                <t:template>
                    <Text text="{table>OrdemId}" wrapping="false"/>
                </t:template>
            </t:Column>

            <t:Column>
                <Label text="{i18n>itemId}"/>
                <t:template>
                    <Text text="{table>ItemId}" wrapping="false"/>
                </t:template>
            </t:Column>

            <t:Column>
                <Label text="{i18n>material}"/>
                <t:template>
                    <Text text="{table>Material}" wrapping="false"/>
                </t:template>
            </t:Column>

            <t:Column>
                <Label text="{i18n>description}"/>
                <t:template>
                    <Text text="{table>Descricao}" wrapping="false"/>
                </t:template>
            </t:Column>

            <t:Column>
                <Label text="{i18n>quantity}"/>
                <t:template>
                    <Text text="{table>Quantidade}" wrapping="false"/>
                </t:template>
            </t:Column>

            <t:Column>
                <Label text="{i18n>unityPrice}"/>
                <t:template>
                    <Text text="{table>PrecoUni}" wrapping="false"/>
                </t:template>
            </t:Column>

            <t:Column>
                <Label text="{i18n>totalPrice}"/>
                <t:template>
                    <Text text="{table>PrecoTot}" wrapping="false"/>
                </t:template>
            </t:Column>
        </t:Table>
    </Page>
</mvc:View>