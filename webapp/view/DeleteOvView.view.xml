<mvc:View controllerName="zov.controller.DeleteOvView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page 
        id="page4" 
        title="{i18n>deleteSalesOrder}" 
        showNavButton="true" 
        navButtonPress="onNavBack">
        <mvc:XMLView viewName="zov.view.NavBarView"/>

        <VBox class="sapUiSmallMargin">
            <f:Form id="FormChange480_12123" editable="true">
                <f:title>
                    <core:Title text="{i18n>searchSalesOrder}"></core:Title>
                </f:title>

                <f:layout>
                    <f:ResponsiveGridLayout 
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="false" />
                </f:layout>

                <f:formContainers>
                    <f:FormContainer>
                        <f:FormElement label="{i18n>orderId}">
                            <f:fields>
                                <Input 
                                    value="" 
                                    id="ordemIdDelete"
                                    type="Number" 
                                    required="true"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="">
                            <f:fields>
                                <Button 
                                    icon="sap-icon://search" 
                                    type="Emphasized" 
                                    text="{i18n>search}" 
                                    press="onSearch" />
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
        
        <VBox class="sapUiSmallMargin">
            <f:Form id="FormChange480_12123-2" editable="true">
                <f:title>
                    <core:Title  text= "{i18n>salesOrderInfo}"></core:Title>
                </f:title>

                <f:layout>
                    <f:ResponsiveGridLayout 
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="4"
                        adjustLabelSpan="false"
                        emptySpanXL="3"
                        emptySpanL="3"
                        emptySpanM="3"
                        emptySpanS="0"
                        columnsXL="2"
                        columnsL="2"
                        columnsM="2"
                        singleContainerFullSize="false" />
                </f:layout>

                <f:formContainers>
                    <f:FormContainer>
                        <f:FormElement label="{i18n>creationDate}">
                            <f:fields>
                                <Input 
                                    value="" 
                                    id="dataCriacaoDelete" 
                                    editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>createdBy}">
                            <f:fields>
                                <Input 
                                    value="" 
                                    id="criadoPorDelete" 
                                    editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>clientId}">
                            <f:fields>
                                <Input 
                                    value="" 
                                    id="clienteIdDelete" 
                                    editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalItems}">
                            <f:fields>
                                <Input 
                                    value="" 
                                    id="totalItensDelete" 
                                    editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalFreight}">
                            <f:fields>
                                <Input 
                                    value="" 
                                    id="totalFreteDelete" 
                                    editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalOrder}">
                            <f:fields>
                                <Input 
                                    value=""
                                    id="totalOrdemDelete" 
                                    editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>orderStatus}">
                            <f:fields>
                                <Input 
                                    value="" 
                                    id="statusOrdemDelete" 
                                    editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement >
                            <f:fields>
                                <HBox justifyContent="End">
                                    <items>
                                        <Button 
                                            icon="sap-icon://clear-all" 
                                            type="Emphasized" 
                                            text="{i18n>clean}" 
                                            width="10rem" 
                                            class="sapUiMediumMarginEnd" 
                                            press="onClean"/>
                                        <Button 
                                            icon="sap-icon://delete"
                                            type="Emphasized" 
                                            text="{i18n>delete}" 
                                            width="10rem" 
                                            press="onDelete"/>
                                    </items>
                                </HBox>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>

        <t:Table 
            id="tableDelete"
            rows="{table>/}"
            threshold="10"
            class="sapUiSmallMargin"
        >
            <t:extension>
                <OverflowToolbar style="Standard">
                    <Title id="titleDelete" text="{i18n>items}"/>
                </OverflowToolbar>
            </t:extension>

            <t:columns>
                <t:Column>
                    <Label text="{i18n>orderId}"/>
                    <t:template>
                        <Text text="{table>OrdemId}" wrapping="false"/>
                    </t:template>
                </t:Column>

                <t:Column>
                    <Label text="{i18n>itemId}"/>
                    <t:template>
                        <Text text="{table>ItemId}" wrapping="false"/>
                    </t:template>
                </t:Column>

                <t:Column>
                    <Label text="{i18n>material}"/>
                    <t:template>
                        <Text text="{table>Material}" wrapping="false"/>
                    </t:template>
                </t:Column>

                <t:Column>
                    <Label text="{i18n>description}"/>
                    <t:template>
                        <Text text="{table>Descricao}" wrapping="false"/>
                    </t:template>
                </t:Column>
                
                <t:Column>
                    <Label text="{i18n>quantity}"/>
                    <t:template>
                        <Text text="{table>Quantidade}" wrapping="false"/>
                    </t:template>
                </t:Column>

                <t:Column>
                    <Label text="{i18n>unitPrice}"/>
                    <t:template>
                        <Text text="{table>PrecoUni}" wrapping="false"/>
                    </t:template>
                </t:Column>

                <t:Column>
                    <Label text="{i18n>totalPrice}"/>
                    <t:template>
                        <Text text="{table>PrecoTot}" wrapping="false"/>
                    </t:template>
                </t:Column>
            </t:columns>
        </t:Table>
    </Page>
</mvc:View>