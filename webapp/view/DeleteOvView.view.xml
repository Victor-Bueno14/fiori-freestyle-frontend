<mvc:View controllerName="zov.controller.DeleteOvView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m">
    <Page id="page4" title="{i18n>title}" showNavButton="true" navButtonPress="onNavBack">
        <Toolbar>
            <ToolbarSpacer />

            <Button text="Home" press="onHome" class="sapUiLargeMargin" />

            <ToolbarSeparator />

            <Button text="{i18n>createOrder}" press="onCreateOv" class="sapUiLargeMargin"/>

            <ToolbarSeparator />

            <Button text="{i18n>createOrderDeep}" press="onCreateDeepOv" class="sapUiLargeMargin"/>

            <ToolbarSeparator />

            <Button text="{i18n>viewOrder}" press="onReadOv" class="sapUiLargeMargin" />

            <ToolbarSeparator />

            <Button text="{i18n>modifyOrder}" press="onEditOv" class="sapUiLargeMargin"/>

            <ToolbarSeparator />

            <Button text="{i18n>deleteOrder}" press="onDeleteOv" class="sapUiLargeMargin"/>

            <ToolbarSpacer />
        </Toolbar>

        <VBox class="sapUiSmallMargin">
            <f:Form id="FormChange480_12123" editable="true">
                <f:title>
                    <core:Title text="{i18n>searchSalesOrder}"></core:Title>
                </f:title>

                <f:layout>
                    <f:ResponsiveGridLayout 
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="false" />
                </f:layout>

                <f:formContainers>
                    <f:FormContainer>
                        <f:FormElement label="{i18n>orderId}">
                            <f:fields>
                                <Input value="" id="ordemIdDelete" />
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="">
                            <f:fields>
                                <Button type="Emphasized" text="{i18n>search}" press="onSearch" />
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
        
        <VBox class="sapUiSmallMargin">
            <f:Form id="FormChange480_12123-2" editable="true">
                <f:title>
                    <core:Title  text= "{i18n>salesOrderInfo}"></core:Title>
                </f:title>

                <f:layout>
                    <f:ResponsiveGridLayout 
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="4"
                        adjustLabelSpan="false"
                        emptySpanXL="3"
                        emptySpanL="3"
                        emptySpanM="3"
                        emptySpanS="0"
                        columnsXL="2"
                        columnsL="2"
                        columnsM="2"
                        singleContainerFullSize="false" />
                </f:layout>

                <f:formContainers>
                    <f:FormContainer>
                        <f:FormElement label="{i18n>creationDate}">
                            <f:fields>
                                <Input value="" id="dataCriacaoDelete" editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>createdBy}">
                            <f:fields>
                                <Input value="" id="criadoPorDelete" editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>clientId}">
                            <f:fields>
                                <Input value="" id="clienteIdDelete" editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalItems}">
                            <f:fields>
                                <Input value="" id="totalItensDelete" editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalFreight}">
                            <f:fields>
                                <Input value="" id="totalFreteDelete" editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalOrder}">
                            <f:fields>
                                <Input value="" id="totalOrdemDelete" editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>orderStatus}">
                            <f:fields>
                                <Input value="" id="statusOrdemDelete" editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement >
                            <f:fields>
                                <HBox justifyContent="End">
                                    <items>
                                        <Button type="Emphasized" text="{i18n>clean}" width="10rem" class="sapUiMediumMarginEnd" press="onClean"></Button>
                                        <Button type="Emphasized" text="{i18n>delete}" width="10rem" press="onDelete"></Button>
                                    </items>
                                </HBox>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
    </Page>
</mvc:View>