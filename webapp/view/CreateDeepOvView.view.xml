<mvc:View controllerName="zov.controller.CreateDeepOvView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m">
    <Page id="page5" title="{i18n>title}" showNavButton="true" navButtonPress="onNavBack">
        <Toolbar>
            <ToolbarSpacer />

            <Button text="Home" press="onHome" class="sapUiLargeMargin" />

            <ToolbarSeparator />

            <Button text="{i18n>createOrder}" press="onCreateOv" class="sapUiLargeMargin"/>

            <ToolbarSeparator />

            <Button text="{i18n>createOrderDeep}" press="onCreateDeepOv" class="sapUiLargeMargin"/>

            <ToolbarSeparator />

            <Button text="{i18n>viewOrder}" press="onReadOv" class="sapUiLargeMargin" />

            <ToolbarSeparator />

            <Button text="{i18n>modifyOrder}" press="onEditOv" class="sapUiLargeMargin"/>

            <ToolbarSeparator />

            <Button text="{i18n>deleteOrder}" press="onDeleteOv" class="sapUiLargeMargin"/>

            <ToolbarSpacer />
        </Toolbar>

        <VBox class="sapUiSmallMargin">
            <f:Form id="FormChange480_12124" editable="true">
                <f:title>
                    <core:Title text="{i18n>salesOrderInfo}"></core:Title>
                </f:title>

                <f:layout>
                    <f:ResponsiveGridLayout 
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="4"
                        adjustLabelSpan="false"
                        emptySpanXL="3"
                        emptySpanL="3"
                        emptySpanM="3"
                        emptySpanS="0"
                        columnsXL="2"
                        columnsL="2"
                        columnsM="2"
                        singleContainerFullSize="false" />
                </f:layout>
            
                <f:formContainers>
                    <f:FormContainer>
                        <f:FormElement label="{i18n>orderId}">
                            <f:fields>
                                <Input value="" id="ordemIdCreateDeep" editable="false" />
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>creationDate}">
                            <f:fields>
                                <Input value="" id="dataCriacaoCreateDeep" editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>     

                    <f:FormContainer>
                        <f:FormElement label="{i18n>createdBy}">
                            <f:fields>
                                <Input value="" id="criadoPorCreateDeep" editable="false" />
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalOrder}">
                            <f:fields>
                                <Input value="" id="totalOrdemCreateDeep" editable="false" />
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>

        <VBox class="sapUiSmallMargin">
            <f:Form id="FormChange480_12124-2" editable="true">
                <f:title>
                    <core:Title text="{i18n>createSalesOrder}"></core:Title>
                </f:title>

                <f:layout>
                    <f:ResponsiveGridLayout 
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="4"
                        adjustLabelSpan="false"
                        emptySpanXL="3"
                        emptySpanL="3"
                        emptySpanM="3"
                        emptySpanS="0"
                        columnsXL="2"
                        columnsL="2"
                        columnsM="2"
                        singleContainerFullSize="false" />
                </f:layout>
            
                <f:formContainers>
                    <f:FormContainer>
                        <f:FormElement label="{i18n>clientId}">
                            <f:fields>
                                 <Input value="" id="clienteIdCreateDeep" />
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalItems}">
                            <f:fields> 
                                <Input value="" id="totalItensCreateDeep" change="onChange"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalFreight}">
                            <f:fields>
                                <Input value="" id="totalFreteCreateDeep" change="onChange"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>orderStatus}">
                            <f:fields>
                                <Input value="" id="statusOrdemCreateDeep" />
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="">
                            <f:fields>
                                <Button type="Emphasized" text="{i18n>clean}" press="onClean"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>
                    
                    <f:FormContainer>
                        <f:FormElement label="">
                            <f:fields>
                                <Button type="Emphasized" text="{i18n>create}" press="onCreate"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                </f:formContainers>
            </f:Form>
        </VBox>

        <VBox class="sapUiSmallMargin">
            <f:Form id="FormChange480_12124-3" editable="true">
                <f:title>
                    <core:Title text="{i18n>addItem}"></core:Title>
                </f:title>

                <f:layout>
                    <f:ResponsiveGridLayout 
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="4"
                        adjustLabelSpan="false"
                        emptySpanXL="3"
                        emptySpanL="3"
                        emptySpanM="3"
                        emptySpanS="0"
                        columnsXL="3"
                        columnsL="3"
                        columnsM="3"
                        singleContainerFullSize="false" />
                </f:layout>
            
                <f:formContainers>
                    <f:FormContainer>
                        <f:FormElement label="{i18n>itemId}">
                            <f:fields>
                                 <Input value="" id="itemId"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>material}">
                            <f:fields> 
                                <Input value="" id="material" placeholder="Ex.: 1000"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>description}">
                            <f:fields>
                                <Input value="" id="descricao" placeholder="Ex.: Mouse"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>quantity}">
                            <f:fields>
                                <Input value=""  id="quantidade" change="onChangeItem"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>unitPrice}">
                            <f:fields>
                                <Input value="" id="precoUni" change="onChangeItem"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>
                    
                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalPrice}">
                            <f:fields>
                                <Input value="" id="precoTot" editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="">
                            <f:fields>
                                <Button 
                                    icon="sap-icon://product"
                                    text="{i18n>createdItems} {items>/QuantityItems}"
                                    type="Emphasized"
                                    />
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="">
                            <f:fields>
                                <Button text="{i18n>cleanItem}" type="Emphasized" press="onCleanItem"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="">
                            <f:fields>
                                <Button text="{i18n>addItem}" type="Emphasized" press="onAddItem"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
    </Page>
</mvc:View>