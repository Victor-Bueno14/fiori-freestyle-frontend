<mvc:View controllerName="zov.controller.CreateDeepOvView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page 
        id="page5" 
        title="{i18n>createSalesOrder}" 
        showNavButton="true" 
        navButtonPress="onNavBack">
        <mvc:XMLView viewName="zov.view.NavBarView"/>

        <VBox class="sapUiSmallMargin">
            <f:Form id="FormChange480_12124" editable="true">
                <f:title>
                    <core:Title text="{i18n>salesOrderInfo}"></core:Title>
                </f:title>

                <f:layout>
                    <f:ResponsiveGridLayout 
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="4"
                        adjustLabelSpan="false"
                        emptySpanXL="3"
                        emptySpanL="3"
                        emptySpanM="3"
                        emptySpanS="0"
                        columnsXL="2"
                        columnsL="2"
                        columnsM="2"
                        singleContainerFullSize="false" />
                </f:layout>
            
                <f:formContainers>
                    <f:FormContainer>
                        <f:FormElement label="{i18n>orderId}">
                            <f:fields>
                                <Input 
                                    value="" 
                                    id="ordemIdCreateDeep" 
                                    editable="false" 
                                    type="Number"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>creationDate}">
                            <f:fields>
                                <Input 
                                    value="" 
                                    id="dataCriacaoCreateDeep" 
                                    editable="false"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>     

                    <f:FormContainer>
                        <f:FormElement label="{i18n>createdBy}">
                            <f:fields>
                                <Input 
                                    value="" 
                                    id="criadoPorCreateDeep" 
                                    editable="false" />
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalOrder}">
                            <f:fields>
                                <Input 
                                    value="" 
                                    id="totalOrdemCreateDeep" 
                                    editable="false" 
                                    type="Number"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>

        <VBox class="sapUiSmallMargin">
            <f:Form id="FormChange480_12124-2" editable="true">
                <f:title>
                    <core:Title text="{i18n>createSalesOrder}"></core:Title>
                </f:title>

                <f:layout>
                    <f:ResponsiveGridLayout 
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="4"
                        adjustLabelSpan="false"
                        emptySpanXL="3"
                        emptySpanL="3"
                        emptySpanM="3"
                        emptySpanS="0"
                        columnsXL="2"
                        columnsL="2"
                        columnsM="2"
                        singleContainerFullSize="false" />
                </f:layout>
            
                <f:formContainers>
                    <f:FormContainer>
                        <f:FormElement label="{i18n>clientId}">
                            <f:fields>
                                 <Input 
                                    value="" 
                                    id="clienteIdCreateDeep" 
                                    type="Number" 
                                    required="true"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalItems}">
                            <f:fields> 
                                <Input 
                                    value="" 
                                    id="totalItensCreateDeep" 
                                    liveChange="onChange" 
                                    type="Number" 
                                    required="true"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalFreight}">
                            <f:fields>
                                <Input 
                                    value="" 
                                    id="totalFreteCreateDeep" 
                                    liveChange="onChange" 
                                    type="Number" 
                                    required="true"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>orderStatus}">
                            <f:fields>
                                <Input 
                                    value="" 
                                    id="statusOrdemCreateDeep" 
                                    required="true"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="">
                            <f:fields>
                                <Button 
                                    icon="sap-icon://clear-all" 
                                    type="Emphasized" 
                                    text="{i18n>clean}" 
                                    press="onClean"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>
                    
                    <f:FormContainer>
                        <f:FormElement label="">
                            <f:fields>
                                <Button 
                                    icon="sap-icon://create" 
                                    type="Emphasized" 
                                    text="{i18n>create}" 
                                    press="onCreate"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                </f:formContainers>
            </f:Form>
        </VBox>

        <VBox class="sapUiSmallMargin">
            <f:Form id="FormChange480_12124-3" editable="true">
                <f:title>
                    <core:Title text="{i18n>addItem}"></core:Title>
                </f:title>

                <f:layout>
                    <f:ResponsiveGridLayout 
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="4"
                        adjustLabelSpan="false"
                        emptySpanXL="3"
                        emptySpanL="3"
                        emptySpanM="3"
                        emptySpanS="0"
                        columnsXL="3"
                        columnsL="3"
                        columnsM="3"
                        singleContainerFullSize="false" />
                </f:layout>
            
                <f:formContainers>
                    <f:FormContainer>
                        <f:FormElement label="{i18n>itemId}">
                            <f:fields>
                                 <Input 
                                    value="" 
                                    id="itemId" 
                                    type="Number"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>material}">
                            <f:fields> 
                                <Input 
                                    value="" 
                                    id="material" 
                                    placeholder="Ex.: 1000" 
                                    type="Number"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>description}">
                            <f:fields>
                                <Input 
                                    value="" 
                                    id="descricao" 
                                    placeholder="Ex.: Mouse"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>quantity}">
                            <f:fields>
                                <Input 
                                    value=""  
                                    id="quantidade" 
                                    liveChange="onChangeItem" 
                                    type="Number"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="{i18n>unitPrice}">
                            <f:fields>
                                <Input 
                                    value="" 
                                    id="precoUni" 
                                    liveChange="onChangeItem" 
                                    type="Number"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>
                    
                    <f:FormContainer>
                        <f:FormElement label="{i18n>totalPrice}">
                            <f:fields>
                                <Input 
                                    value="" 
                                    id="precoTot" 
                                    editable="false" 
                                    type="Number"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="">
                            <f:fields>
                                <Button 
                                    icon="sap-icon://product"
                                    text="{i18n>createdItems} {items>/QuantityItems}"
                                    type="Emphasized"
                                    />
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="">
                            <f:fields>
                                <Button 
                                    icon="sap-icon://decline" 
                                    text="{i18n>cleanItem}" 
                                    type="Emphasized" 
                                    press="onCleanItem"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>

                    <f:FormContainer>
                        <f:FormElement label="">
                            <f:fields>
                                <Button 
                                    icon="sap-icon://add" 
                                    text="{i18n>addItem}"
                                    type="Emphasized" 
                                    press="onAddItem"/>
                            </f:fields>
                        </f:FormElement>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>

        <VBox class="sapUiSmallMargin">
            <t:Table 
                id="tableItems"
                rows="{items>/Items}"
                selectionMode="None"
                alternateRowColors="true"
                threshold="10"
                rowMode="fixed"
            >
                <t:extension>
                    <OverflowToolbar style="Standard">
                        <Title id="titleItems" text="{i18n>items}"/>
                    </OverflowToolbar>
                </t:extension>

                <t:Column>
                    <Label text="{i18n>itemId}"/>
                    <t:template>
                        <Text text="{items>ItemId}" wrapping="false"/>
                    </t:template>
                </t:Column>

                <t:Column>
                    <Label text="{i18n>material}"/>
                    <t:template>
                        <Text text="{items>Material}" wrapping="false"/>
                    </t:template>
                </t:Column>

                <t:Column>
                    <Label text="{i18n>description}"/>
                    <t:template>
                        <Text text="{items>Descricao}" wrapping="false"/>
                    </t:template>
                </t:Column>

                <t:Column>
                    <Label text="{i18n>quantity}"/>
                    <t:template>
                        <Text text="{items>Quantidade}" wrapping="false"/>
                    </t:template>
                </t:Column>

                <t:Column>
                    <Label text="{i18n>unitPrice}"/>
                    <t:template>
                        <Text text="{items>PrecoUni}" wrapping="false"/>
                    </t:template>
                </t:Column>

                <t:Column>
                    <Label text="{i18n>totalPrice}"/>
                    <t:template>
                        <Text text="{items>PrecoTot}" wrapping="false"/>
                    </t:template>
                </t:Column>
            </t:Table>
        </VBox>
    </Page>
</mvc:View>